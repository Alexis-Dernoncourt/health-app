generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model auth_access_token {
  id            String      @default(cuid()) @id
  tokenable_id  users[]     
  type          String?     @default("auth_token") @db.VarChar(25)
  name          String?     @default("access-token")
  hash          String
  abilities     String      @default("['user:normal']")
  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt
  last_used_at  DateTime    @default(now())
  expires_at    Int     
}

model users {
  id          String      @default(cuid()) @id
  email       String      @unique
  image       String?
  firstname   String?     @db.VarChar(255)
  lastname    String?     @db.VarChar(255)
  password    String
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt
  auth_access_token auth_access_token[]
  user_favorites user_favorites[]
  verificationToken   String?   @unique
  isEmailVerified     Boolean   @default(false)
  menus menus[]
}

model recipes {
  id              String      @default(cuid()) @id
  image           String?
  title           String      @db.VarChar(255)
  description     String
  ingredients     String
  steps           String
  prep_time       String?
  cook_time       String?
  servings        String?
  calories        String?
  created_at      DateTime    @default(now())
  updatedat       DateTime    @updatedAt
  user_favorites  user_favorites[]
  userId          String

  menus menus[]
}

model user_favorites {
  id            String        @default(cuid()) @id
  user          users?        @relation(fields: [user_id], references: [id])
  user_id       String?
  recipe        recipes?      @relation(fields: [recipe_id], references: [id])
  recipe_id     String?
  created_at    DateTime?     @default(now())
  updated_at    DateTime?     @updatedAt
}

enum mealType {
  breakfast
  lunch
  dinner
  snack
  dessert
}

model menus {
  id            String        @default(cuid()) @id
  user          users?        @relation(fields: [user_id], references: [id])
  user_id       String?
  recipe        recipes?      @relation(fields: [recipe_id], references: [id])
  recipe_id     String?
  meal          mealType
  date          DateTime?     @default(now())
  created_at    DateTime?     @default(now())
  updated_at    DateTime?     @updatedAt
}
